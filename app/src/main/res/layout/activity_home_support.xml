    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/home_bg_2"
        android:orientation="horizontal"
        android:padding="0dp">


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/divider"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/home_bg_2"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/home_box_hight"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="HOME1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/work_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_1"
                android:textColor="@color/fontcolor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/divider"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/home_box_hight"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="HOME2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/insp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_2"
                android:textColor="@color/fontcolor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/home_bg_2"
        android:orientation="horizontal"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/home_box_hight"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="HOME3"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/video" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_3"
                android:textColor="@color/fontcolor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/divider"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/home_box_hight"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="HOME4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/troubleshoot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/home_4"
                android:textColor="@color/fontcolor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/divider"
        android:gravity="center"
        android:text="Copyright @ MuSaFiR ali"></TextView>


</LinearLayout>